<!--pages/move/move.wxml-->
<view class="page-section">      
  <view class="flex-wrp" style="flex-direction:column;">
    <view class="demo-1">
    <view class="map-container">
     <map id="myMap" class="my-map" longitude="{{longitude}}" latitude="{{latitude}}" markers="{{markers}}" covers="{{covers}}"  scale="16" style="width: 100%; height:180px;" show-location></map>
    </view>
    </view>
    <text>当前的交通方式：</text>
    <view class="weui-cells weui-cells_after-title">
      <radio-group bindchange="radioChange">
        <label class="weui-cell weui-check__label" wx:for="{{items}}" wx:key="{{item.value}}">
          <view class="weui-cell__hd">
            <radio value="{{item.value}}" checked="true"/>
          </view>
          <view class="weui-cell__bd">{{item.name}}</view>
        </label>
      </radio-group>
    </view>
    <button type="primary" class="movebtn">切换交通方式</button>
    <button type="primary" class="movebtn">到达目的地</button>
  </view>
</view>