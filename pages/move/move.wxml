<!-- <view class="page-section">       -->
   <view style="flex-direction:column;">
    <view class="map-container">
     <map wx:if="hasMarkers" id="map" longitude="{{longitude}}" latitude="{{latitude}}" covers="{{markers}}" scale="{{scale}}"  show-location style=" width: 100%; height:300px;"polyline="{{polyline}}"></map>
  </view>
  <view>
    <picker bindchange="blindPickerChange" value="{{index}}" range="{{array}}" mode = "selector">
      <view class="picker">
        当前出行方式：{{array[index]}}
      </view>
    </picker>
  </view>
   <view>
    <switch checked="starRun" bindchange="change">移行中</switch>
  </view>
  <navigator url="/pages/index/index?title=index">
    <button type="primary" class="movebtn" bindtap="stopRun" size="default">到达</button>
  </navigator>
</view>



